    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css"
  },
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@remix-run/vercel": "^1.6.5",
    "@vercel/node": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "postcss": "^8.4.14",
    "prisma": "^4.1.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
